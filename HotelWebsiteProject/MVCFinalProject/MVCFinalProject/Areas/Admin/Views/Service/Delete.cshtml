@model ServiceViewModel
@{
    ViewData["Title"] = "Delete";
}

<div class="card mb-3">
    <form method="post" class="ms-1 mb-5 mt-5" asp-area="Admin" asp-controller="Service" asp-action="Delete">
        <h2>Are you sure you want to delete this service?</h2>
        <button type="submit" class="btn btn-danger">Yes</button>
        <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Service" asp-action="Index">No</a>
    </form>
    <img class="card-img-top" style="width: 500px; height: 500px; object-fit: contain; margin-left: 70px;" src="~/img/services/@Model.Image" alt="service">
    <h1 class="ms-3">@Model.Name</h1>
    <h3 class="ms-3">@Model.Description</h3>
</div>

