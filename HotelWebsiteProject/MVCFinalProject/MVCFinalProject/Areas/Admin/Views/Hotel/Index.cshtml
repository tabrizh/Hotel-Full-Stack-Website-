@model List<HotelViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hotels List</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Image</th>
                                    <th>Description</th>
                                    <th>Star Count</th>
                                    <th>Is Popular</th>
                                    <th>Room Types Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var hotel in Model)
                                {
                                <tr>
                                    <td><strong>@hotel.Name</strong></td>
                                    <td><img style="width: 150px; height: 150px;" src="~/img/HOTEL/@hotel.Image" /></td>
                                    <td>@Html.Raw(hotel.Description)</td>
                                    <td>@hotel.StarCount</td>
                                    <td>@hotel.Popular</td>
                                    <td>@hotel.Rooms.Count</td>
                                    <td><a class="btn btn-primary" asp-controller="Hotel" asp-action="Details" asp-route-id="@hotel.Id">Details</a></td>
                                    <td><a class="btn btn-success" asp-controller="Hotel" asp-action="Update" asp-route-id="@hotel.Id">Update</a></td>
                                    <td><a class="btn btn-danger" asp-controller="Hotel" asp-action="Delete" asp-route-id="@hotel.Id">Delete</a></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

