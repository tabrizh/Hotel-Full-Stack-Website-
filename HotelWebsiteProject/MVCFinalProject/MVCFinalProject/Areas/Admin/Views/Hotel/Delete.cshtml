@model HotelViewModel
@{
    ViewData["Title"] = "Delete";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2>@Model.Name</h2>
            <h3>@Model.Description</h3>
            <img src="~/img/HOTEL/@Model.Image" style="width: 300px; height: 300px; object-fit: contain" class="mb-5" />
            <br />
            <h3>Are you sure you want to delete this Hotel</h3>
            <a class="btn btn-secondary" asp-action="Index">No</a>
            <form method="post" asp-area="Admin" asp-controller="Hotel" asp-action="Delete">
                <button class="btn btn-danger" type="submit">Yes</button>
            </form>
        </div>
    </div>
</div>

