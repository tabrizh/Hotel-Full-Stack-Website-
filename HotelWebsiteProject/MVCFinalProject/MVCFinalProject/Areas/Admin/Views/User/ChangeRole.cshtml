@model UserViewModel
    @{
        ViewData["Title"] = "AddRole";
    }


    <div class="col-md-6 grid-margin stretch-card">
                  <div class="card">
                    <div class="card-body">
                      <h4 class="card-title">Change User Role</h4>
                      <form class="forms-sample" method="post" asp-area="Admin" asp-controller="User" asp-action="ChangeRole">
                          <div class="form-group">
                              <h4><strong>Full Name</strong></h4>
                              @Model.FullName
                          </div>
                          <div class="form-group">
                              <h4><strong>Username</strong></h4>
                              @Model.UserName
                          </div>
                          <div class="form-group">
                              <h4><strong>Email</strong></h4>
                              @Model.Email
                          </div>
                          <div class="form-group">
                              <label style="font-size:1.3rem" asp-for="RoleId"><strong>Roles</strong></label>
                              <select class="form-select" asp-for="RoleId">
                                  <option value="0">--Select a Role--</option>
                                  @foreach (var role in ViewBag.Roles)
                                  {
                                      if (role.Name == Model.Role)
                                      {
                                          <option value="@role.Id" disabled>@role.Name</option>
                                      }
                                      else
                                      {
                                          <option value="@role.Id">@role.Name</option>
                                      }
                                  }
                              </select>
                          </div>
                          <button type="submit" class="btn btn-primary me-2">Submit</button>
                          <button asp-controller="User" asp-action="Index" class="btn btn-outline-danger">Cancel</button>
                      </form>
                    </div>
                  </div>
                </div>