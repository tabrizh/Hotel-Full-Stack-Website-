@model List<HomePageAboutViewModel>
@{
    ViewData["Title"] = "UpdateAbout";
}
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Services List</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Heading</th>
                                    <th>Description</th>
                                    <th>Button Text</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            @foreach (var about in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td><img style="width:150px;height:150px;object-fit:contain" src="~/img/about/@about.Image" /></td>
                                        <td>@Html.Raw(about.Heading)</td>
                                        <td style="width:500px">@Html.Raw(about.Description)</td>
                                        <td>@about.BtnText</td>
                                        <td><a class="btn btn-success" asp-action="UpdateAboutId" asp-route-id="@about.Id">Edit</a></td>

                                    </tr>
                                        
                                </tbody>
                            }
                            </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>