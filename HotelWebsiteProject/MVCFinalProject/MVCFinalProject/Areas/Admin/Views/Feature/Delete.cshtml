@model FeatureViewModel
@{
    ViewData["Title"] = "Delete";
}

<div class="card mb-3">
    <form method="post" class="ms-1 mb-5 mt-5" asp-area="Admin" asp-controller="Feature" asp-action="Delete">
        <h2>Are you sure you want to delete this feature?</h2>
        <button type="submit" class="btn btn-danger">Yes</button>
        <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Feature" asp-action="Index">No</a>
    </form>
    <img class="card-img-top" style="width: 500px; height: 500px; object-fit: contain; margin-left: 70px;" src="~/img/features/@Model.Image" alt="Card image cap">
    <h1 class="ms-3">@Model.Text</h1>
</div>

